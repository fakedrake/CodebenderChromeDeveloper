{
    "name": "CodebenderDev",
    "version": "0.1.9",
    "manifest_version": 2,
    "description": "Development of codebender.cc tools",
    "icons": {"16": "logo16.png",
              "48": "logo48.png",
              "128": "logo128.png"},
    "background": {
	"scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost/*",
                "http://localhost:8080/*",
                "http://*.codebender.cc/*",
                "https://*.codebender.cc/*",
                "http://codebender.cc/*",
                "https://codebender.cc/*"
	    ],
            "js": ["content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "externally_connectable": {
	"matches": [
            "http://localhost/*",
            "http://localhost:8080/*",
            "http://*.codebender.cc/*",
            "https://*.codebender.cc/*",
            "http://codebender.cc/*",
            "https://codebender.cc/*"
	],
	"accepts_tls_channel_id": false
    },
    "web_accessible_resources": ["bundles/*"],
    "permissions": [
        "http://localhost/*",
        "http://localhost:8080/*",
        "http://*.codebender.cc/*",
        "https://*.codebender.cc/*",
        "http://codebender.cc/*",
        "https://codebender.cc/*",
        "management",
        "activeTab",
        "webRequest",
        "webRequestBlocking"
    ]
}
